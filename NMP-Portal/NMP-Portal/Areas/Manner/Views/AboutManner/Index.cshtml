@using NMP.Commons.Resources;
@model NMP.Commons.ViewModels.AboutMannerViewModel;
@{
    ViewData["Title"] = Resource.lblAboutManner;
}

@section BeforeContent {
    <govuk-back-link asp-action="FarmList" asp-controller="Farm" asp-area="">@Resource.lblBack</govuk-back-link>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            @Resource.lblMannerEstimateContent1
        </h1>
        <p class="govuk-body">
            @Resource.lblMannerEstimateContent2
        </p>
        <h2 class="govuk-heading-m">
            @Resource.lblMannerEstimateContent3
        </h2>
        <p class="govuk-body">
            @Resource.lblMannerEstimateContent4
        </p>
        <form class="form margin-top-forty" asp-area="Manner" asp-action="Index" asp-controller="AboutManner" method="post">
            <govuk-checkboxes name="DoNotShowAboutManner" asp-for="@Model.DoNotShowAboutManner">
                <govuk-checkboxes-item checked="@Model.DoNotShowAboutManner" value="true">@Resource.lblDo_not_show_this_information_again</govuk-checkboxes-item>
            </govuk-checkboxes>
            <govuk-button type="submit" data-prevent-double-click="true" class="govuk-button margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
        </form>
    </div>
</div>