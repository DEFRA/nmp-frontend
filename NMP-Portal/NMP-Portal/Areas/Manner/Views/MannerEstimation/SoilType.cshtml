@using NMP.Commons.Enums
@using NMP.Commons.Resources
@using NMP.Commons.ViewModels
@model MannerEstimationStep7ViewModel

@{
    string title = Resource.lblMannerEstimate;
    string heading = string.Format(Resource.lblWhatIsSoilType, Model.FieldName);
    ViewData["Title"] = $"{heading} {Resource.lblHyphen} {title}";
}
@section BeforeContent {
    <govuk-back-link asp-action="@(Model.IsCheckAnswer ? "CheckAnswer" : "NVZField")" asp-controller="MannerEstimation">@Resource.lblBack</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-action="SoilType" method="post" asp-controller="MannerEstimation" autocomplete="off">
            @Html.AntiForgeryToken()
            <govuk-radios asp-for="@Model.SoilTypeId">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        @heading
                    </govuk-radios-fieldset-legend>
                    <govuk-radios-hint>
                        @string.Format(Resource.lblTheseOptionsComeFromRB209, Resource.lblSoilTypes)
                    </govuk-radios-hint>
                    @if (ViewBag.SoilTypesList != null)
                    {
                        @foreach (var item in ViewBag.SoilTypesList ?? Enumerable.Empty<dynamic>())
                        {
                            <govuk-radios-item value="@item.SoilTypeId">
                                @item.SoilType
                            </govuk-radios-item>
                        }
                    }
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit" data-prevent-double-click="true" class="govuk-button margin-bottom-forty margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
        </form>
        <p class="govuk-body cancel-link">
            @if (!Model.IsCheckAnswer)
            {
                <a class="govuk-link" asp-action="MannerEstimationCancel" asp-controller="MannerEstimation">@Resource.lblCancel</a>
            }
            else
            {
                <a class="govuk-link" asp-action="CheckAnswer" asp-controller="MannerEstimation">@Resource.lblCancel</a>
            }
        </p>
    </div>
</div>