@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.SoilAnalysisViewModel
@{
    ViewData["Title"] = Resource.lblSulpherDeficient;
    var yes = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.True);
    var no = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.False);
}

@section BeforeContent {
    <govuk-back-link asp-action="ChangeSoilAnalysis" asp-controller="SoilAnalysis" asp-route-i="@Model.EncryptedSoilAnalysisId" asp-route-j="@Model.EncryptedFieldId" asp-route-k="@Model.EncryptedFarmId">@Resource.lblBack</govuk-back-link>
}
<form asp-action="SulphurDeficient" asp-controller="Field" method="post">
    @Html.AntiForgeryToken()
    <govuk-notification-banner>
        <govuk-notification-banner-title>
            @Resource.lblImportant
        </govuk-notification-banner-title>
        <p class="govuk-body">
            This page is in construction
        </p>
    </govuk-notification-banner>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <govuk-radios class="govuk-radios--inline" asp-for="@Model.SulphurDeficient">

                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        @Resource.lblIsSoilDeficientInSulphur
                    </govuk-radios-fieldset-legend>

                    <govuk-radios-item value=@yes>@Resource.lblYes</govuk-radios-item>
                    <govuk-radios-item value="@no">@Resource.lblNo</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>
           @*  <govuk-button type="submit" class="margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button> *@
            <p class="govuk-body cancel-link"><a asp-action="ChangeSoilAnalysis" asp-controller="SoilAnalysis" asp-route-i="@Model.EncryptedSoilAnalysisId" asp-route-j="@Model.EncryptedFieldId" asp-route-k="@Model.EncryptedFarmId">@Resource.lblCancel</a></p>

        </div>

    </div>
</form>