@using NMP.Portal.Resources
@using NMP.Portal.ViewModels

@model FieldViewModel
@{
    ViewData["Title"] = Resource.lblChangeSoilAnalysis;

}

@if (ViewBag.Error != null)
{
    <govuk-error-summary>
        <govuk-error-summary-item href="#">@ViewBag.Error</govuk-error-summary-item>
    </govuk-error-summary>
}
@if (Model != null)
{
    @section BeforeContent {
    <govuk-back-link asp-action="SoilAnalysisDetail" asp-controller="Field" asp-route-i="@Model.EncryptedFieldId" asp-route-j="@Model.EncryptedFarmId">
        @Resource.lblBack
    </govuk-back-link>
    }
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-l">@(string.Format(Resource.lblChangeSoilAnalysisFromDate, Model.SoilAnalyses.Date != null ? Model.SoilAnalyses.Date.Value.ToString("dd MMMM yyyy") : ""))</h1>

            <p class="govuk-body">
                Work in process
            </p>
        </div>
    </div>
}

