        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-form-group">
                <govuk-date-input asp-for="@Model.SoilAnalyses.Date" pattern="[0-9]*">
                    <govuk-date-input-fieldset>
                        <govuk-date-input-hint>
                            @Resource.MsgDateExample
                        </govuk-date-input-hint>
                         @* <govuk-date-input-error-message visually-hidden-text="Error">@Resource.MsgEnterTheDateInNumber</govuk-date-input-error-message> *@
                    </govuk-date-input-fieldset>  
                    
                </govuk-date-input>
            </div>
           
            <govuk-button type="submit" class="margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
            <p class="govuk-body cancel-link"><a asp-action="CreateFieldCancel" asp-controller="Field" asp-route-id="@Model.EncryptedFarmId">@Resource.lblCancel</a></p>
        </div>

    </div>
</form>