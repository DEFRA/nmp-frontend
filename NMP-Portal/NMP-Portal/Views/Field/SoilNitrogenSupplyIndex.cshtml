@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.FieldViewModel
@{
    ViewData["Title"] = Resource.lblEstimateOfNitrogenMineralisationQuestion;
    var actionMethod = "";
    if (Model.IsCheckAnswer)
    {
        actionMethod = "CheckAnswer";
    }
    else if (Model.IsEstimateOfNitrogenMineralisation!=null&&Model.IsEstimateOfNitrogenMineralisation == false)
    {
        actionMethod = "EstimateOfNitrogenMineralisationQuestion";
    }
    else if (Model.IsBasedOnSoilOrganicMatter != null && Model.IsBasedOnSoilOrganicMatter.Value)
    {
        actionMethod = "SoilOrganicMatter";
    }
    else if (Model.IsBasedOnSoilOrganicMatter != null && (!Model.IsBasedOnSoilOrganicMatter.Value))
    {
        actionMethod = "AdjustmentValue";
    }

    var yes = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.True);
    var no = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.False);
}
@section BeforeContent {
    <govuk-back-link asp-action="@actionMethod" asp-controller="Field">@Resource.lblBack</govuk-back-link>
}
