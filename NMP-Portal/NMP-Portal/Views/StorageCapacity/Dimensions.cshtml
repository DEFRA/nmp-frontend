@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.StorageCapacityViewModel
@{
    string title = (!string.IsNullOrEmpty(Model.EncryptedStoreCapacityId)) ? Resource.lblUpdateOrganicMaterialStorage : Resource.lblAddOrganicMaterialStorage;
    ViewData["Title"] = $"{string.Format(Resource.lblStoreDimenstion, Model.StoreName)} {Resource.lblHyphen} {title}";
    var yes = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.True);
    var no = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.False);
}

@section BeforeContent {
    <govuk-back-link asp-action="@((Model.IsCheckAnswer == true && !Model.IsMaterialTypeChange && !Model.IsStorageTypeChange) ? "CheckAnswer" : "StorageTypes")" asp-controller="StorageCapacity">@Resource.lblBack</govuk-back-link>
}
@if (TempData["ErrorOnDimensions"] != null)
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <govuk-error-summary>
                <govuk-error-summary-item href="#">@TempData["ErrorOnDimensions"]</govuk-error-summary-item>
            </govuk-error-summary>
        </div>
    </div>
}

@if (Model != null)
{
    <form asp-action="Dimensions" asp-controller="StorageCapacity" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <div hidden="true">
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FarmName"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.EncryptedFarmID"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.EncryptedHarvestYear"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FarmID"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.ReportOption"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.ReportTypeName"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.NVZReportOption"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FieldAndPlanReportOption"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Year"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.StorageTypeID"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.StorageTypeName"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.MaterialStateName"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.StoreName"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.MaterialStateID"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.CapacityWeight" value="@Model.CapacityWeight"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.SolidManureDensity" value="@Model.SolidManureDensity"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.StorageBagCapacity"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsSlopeEdge"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.BankSlopeAngleID"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.BankSlopeAngleName"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FreeBoardHeight" value="@Model.FreeBoardHeight"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Slope" value="@Model.Slope"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsCheckAnswer" value="@Model.IsCheckAnswer"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsComingFromPlan"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsStoreCapacityExist" value="@Model.IsStoreCapacityExist"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.EncryptedMaterialStateID" value="@Model.EncryptedMaterialStateID"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsComingFromManageToHubPage"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsComingFromMaterialToHubPage"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsMaterialTypeChange" value="@Model.IsMaterialTypeChange"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsStorageTypeChange" value="@Model.IsStorageTypeChange"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsCopyExistingManureStorage"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.EncryptedStoreCapacityId"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsRemovedRecently"/>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <govuk-fieldset>
                    <govuk-fieldset-legend class="govuk-fieldset__legend--l">
                        @string.Format(Resource.lblStoreDimenstion, Model.StoreName)
                    </govuk-fieldset-legend>
                </govuk-fieldset>
                @if (Model.MaterialStateID != (int)NMP.Portal.Enums.MaterialState.SolidManureStorage && Model.StorageTypeID != (int)NMP.Portal.Enums.StorageTypes.StorageBag)
                {
                    <govuk-details>
                        <govuk-details-summary>
                            @Resource.lblAboutFreeboards
                        </govuk-details-summary>
                        <govuk-details-text>
                            <p class="govuk-body">@Resource.lblFreeboardIsTheDistanceBetweenTheTopOfTheTank</p>
                            @if (Model.StorageTypeID == (int)NMP.Portal.Enums.StorageTypes.SquareOrRectangularTank || Model.StorageTypeID == (int)NMP.Portal.Enums.StorageTypes.CircularTank)
                            {
                                <p class="govuk-body">
                                    @Resource.lblForASteelOrConcreteStore
                                </p>
                            }
                            @if (Model.StorageTypeID == (int)NMP.Portal.Enums.StorageTypes.EarthBankedLagoon)
                            {
                                <p class="govuk-body">
                                    @Resource.lblForEarthBankedLagoonsYouMustKeep
                                </p>
                            }

                        </govuk-details-text>
                    </govuk-details>
                }
                @if (Model.StorageTypeID != (int)NMP.Portal.Enums.StorageTypes.CircularTank)
                {
                    <govuk-input asp-for=@Model.Length type="number" step="any" spellcheck="false">
                        @if (Model.StorageTypeID == (int)NMP.Portal.Enums.StorageTypes.EarthBankedLagoon)
                        {
                            <govuk-input-label is-page-heading="false">
                                @Resource.lblWhatIsTheLengthAtTheTopEdgeOfTheLagoon
                                <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>
                            </govuk-input-label>
                        }
                        else
                        {
                            <govuk-input-label is-page-heading="false">
                                @Resource.lblWhatIsTheLength
                                <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>
                            </govuk-input-label>
                        }
                        <govuk-input-suffix>@Resource.lblMetres</govuk-input-suffix>
                    </govuk-input>
                    <govuk-input asp-for=@Model.Width type="number" step="any" spellcheck="false">
                        @if (Model.StorageTypeID == (int)NMP.Portal.Enums.StorageTypes.EarthBankedLagoon)
                        {
                            <govuk-input-label is-page-heading="false">
                                @Resource.lblWhatIsTheWidthAtTheTopEdgeOfTheLagoonSuffix<span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>@Resource.lblQuestionMark
                            </govuk-input-label>
                        }
                        else
                        {
                            <govuk-input-label is-page-heading="false">
                                @Resource.lblWhatIsTheWidthSuffix<span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>@Resource.lblQuestionMark
                            </govuk-input-label>
                        }
                        <govuk-input-suffix>@Resource.lblMetres</govuk-input-suffix>
                    </govuk-input>
                }
                @if (Model.StorageTypeID == (int)NMP.Portal.Enums.StorageTypes.CircularTank)
                {

                    <govuk-radios asp-for="@Model.IsCircumference">
                        <govuk-radios-fieldset>
                            <govuk-radios-fieldset-legend is-page-heading="false">
                                @Resource.lblDoYouWantToEnterTheCircumferenceOrTheDiameter
                            </govuk-radios-fieldset-legend>
                            <govuk-radios-hint>@Resource.lblSelectOneOption</govuk-radios-hint>
                            <govuk-radios-item value="@yes">
                                @Resource.lblCircumference
                                <govuk-radios-item-conditional>
                                    <govuk-input asp-for="@Model.Circumference" type="number" autocomplete="false">
                                        <govuk-input-label>
                                            @Resource.lblWhatIsTheCircumferenceSuffix<span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>@Resource.lblQuestionMark
                                        </govuk-input-label>
                                        <govuk-input-suffix>@Resource.lblMetres</govuk-input-suffix>
                                    </govuk-input>
                                </govuk-radios-item-conditional>
                            </govuk-radios-item>
                            <govuk-radios-item value="@no">
                                @Resource.lblDiameter
                                <govuk-radios-item-conditional>
                                    <govuk-input asp-for="@Model.Diameter" type="number" autocomplete="false">
                                        <govuk-input-label>
                                            @Resource.lblWhatIsTheDiameterSuffix<span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>@Resource.lblQuestionMark
                                        </govuk-input-label>
                                        <govuk-input-suffix>@Resource.lblMetres</govuk-input-suffix>
                                    </govuk-input>
                                </govuk-radios-item-conditional>
                            </govuk-radios-item>
                        </govuk-radios-fieldset>
                    </govuk-radios>
                }

                <govuk-input asp-for=@Model.Depth type="number" step="any" spellcheck="false">

                    @if (Model.StorageTypeID == (int)NMP.Portal.Enums.MaterialState.SolidManureStorage)
                    {
                        <govuk-input-label is-page-heading="false">
                            @Resource.lblWhatIsTheDepthSuffix<span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>@Resource.lblQuestionMark
                        </govuk-input-label>
                    }
                    else
                    {
                        <govuk-input-label is-page-heading="false">
                            @Resource.lblWhatIsTheTotalDepthSuffix<span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblMetres)</span>@Resource.lblQuestionMark
                        </govuk-input-label>
                        <govuk-input-hint>@Resource.lblDoNotDeductTheFreeboard</govuk-input-hint>
                    }
                    <govuk-input-suffix>@Resource.lblMetres</govuk-input-suffix>
                </govuk-input>

                @if (Model.MaterialStateID != (int)NMP.Portal.Enums.MaterialState.SolidManureStorage)
                {
                    <govuk-radios class="govuk-radios--inline" asp-for="@Model.IsCovered">
                        <govuk-radios-fieldset>
                            <govuk-radios-fieldset-legend is-page-heading="false">
                                @string.Format(Resource.lblIsThisCovered, Model.StoreName)
                            </govuk-radios-fieldset-legend>
                            <govuk-radios-item value="@yes">@Resource.lblYes</govuk-radios-item>
                            <govuk-radios-item value="@no">@Resource.lblNo</govuk-radios-item>
                        </govuk-radios-fieldset>
                    </govuk-radios>
                }

                <govuk-button type="submit" class="margin-bottom-forty">
                    @Resource.lblContinue
                </govuk-button>
                <p class="govuk-body cancel-link">
                    @if (!Model.IsCheckAnswer)
                    {
                        @if (Model.IsStoreCapacityExist == true)
                        {
                            <a asp-action="ManageStorageCapacity" asp-controller="StorageCapacity" asp-route-q="@Model.EncryptedFarmID" asp-route-y="@Model.EncryptedHarvestYear" asp-route-t="@Model.IsComingFromManageToHubPage" asp-route-isPlan="@Model.IsComingFromPlan" asp-route-u="@Model.IsRemovedRecently">
                                @Resource.lblCancel
                            </a>
                        }
                        else
                        {
                            @if (!string.IsNullOrWhiteSpace(Model.IsComingFromPlan))
                            {
                                <a asp-action="HarvestYearOverview" asp-controller="Crop" asp-route-id="@Model.EncryptedFarmID" asp-route-year="@Model.EncryptedHarvestYear">
                                    @Resource.lblCancel
                                </a>
                            }
                            else
                            {
                                <a asp-action="FarmSummary" asp-controller="Farm" asp-route-Id="@Model.EncryptedFarmID">
                                    @Resource.lblCancel
                                </a>
                            }
                        }
                    }
                    else
                    {
                        <a asp-action="CheckAnswer" asp-controller="StorageCapacity">@Resource.lblCancel</a>
                    }
                </p>

            </div>

        </div>
    </form>
}