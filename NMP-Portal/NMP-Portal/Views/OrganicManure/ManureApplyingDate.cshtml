@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.OrganicManureViewModel
@{
    ViewData["Title"] = Resource.lblManureApplyingDate;
}
@section BeforeContent {
    <govuk-back-link asp-action="ManureType" asp-controller="OrganicManure">@Resource.lblBack</govuk-back-link>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form class="form" action="ManureApplyingDate" method="post">
            @Html.AntiForgeryToken()
            <div class="govuk-form-group">
                <govuk-date-input asp-for="@Model.ApplicationDate" pattern="[0-9]*">
                    <govuk-date-input-fieldset>
                        <govuk-date-input-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                            @string.Format(Resource.lblWhenAreYouApplyingManureOnField, "ManureGroup", "ManureType")
                        </govuk-date-input-fieldset-legend>
                        
                        <govuk-date-input-hint>
                            <p>@Resource.MsgManureApplyingDateDontHaveExactDate <br> @Resource.lblSampleDate</p>
                            <p>@Resource.MsgManureApplyingDate1OctToJan</p>

                        </govuk-date-input-hint>
                        
                    </govuk-date-input-fieldset>
                </govuk-date-input>
            </div>

            <govuk-button type="submit" class="margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
            <p class="govuk-body cancel-link"><a asp-action="" asp-controller="" >@Resource.lblCancel</a></p>

        </form>

    </div>
</div>