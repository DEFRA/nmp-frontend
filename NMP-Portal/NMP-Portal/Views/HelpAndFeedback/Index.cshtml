@using NMP.Portal.Resources;
@{
    ViewData["Title"] = Resource.lblGetHelpAndFeedback;
}

@section BeforeContent {
    <govuk-back-link asp-action="Index" asp-controller="ReleaseSchedule">@Resource.lblBack</govuk-back-link>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@Resource.lblGetHelpAndFeedback</h1>
        <p class="govuk-body">@Resource.lblAboutGetHelpAndFeedback</p>
        <p class="govuk-body">@Html.Raw(Resource.lblAboutGetHelpAndFeedback_line2)</p>

        <h2 class="govuk-heading-m">@Resource.lblMovingDataToLive</h2>
        <p class="govuk-body">@Html.Raw(Resource.lblMovingDataToLive_line1)</p>
        <p class="govuk-body">@Html.Raw(Resource.lblMovingDataToLive_line2)</p>

        <h2 class="govuk-heading-m">@Resource.lblGettingHelp</h2>
        <p class="govuk-body">@Html.Raw(Resource.contentGettingHelp1)</p>
        <p class="govuk-body">@Resource.contentGettingHelp_line2</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>@Resource.lblHelpIssuesLine1</li>
            <li>@Resource.lblHelpIssuesLine2</li>
            <li>@Resource.lblHelpIssuesLine3</li>
        </ul>
        <p class="govuk-body">@Resource.contentGettingHelp2</p>

        <h2 class="govuk-heading-m">@Resource.lblHelp_with_the_service_recommendations</h2>
        <p class="govuk-body">@Html.Raw(Resource.lblHelp_with_the_service_recommendations_line1)</p>
        <p class="govuk-body">@Resource.lblHelp_with_the_service_recommendations_line2</p>
        <p class="govuk-body">@Resource.lblHelp_with_the_service_recommendations_line3</p>

        <h2 class="govuk-heading-m">@Resource.lblMore_information</h2>
        <p class="govuk-body">@Html.Raw(Resource.lblMore_information_line1)</p>
        <p class="govuk-body">@Html.Raw(Resource.lblMore_information_line2)</p>

        <h2 class="govuk-heading-m">@Resource.lblGivingFeedbackAboutThisService</h2>
        <p class="govuk-body">@Html.Raw(Resource.contentGivingFeedbackAboutThisService1)</p>
        <p class="govuk-body">@Resource.lblYourFeedbackWillHelpUsImproveThisService</p>
        <p class="margin-bottom-forty">&nbsp;</p>
    </div>
</div>