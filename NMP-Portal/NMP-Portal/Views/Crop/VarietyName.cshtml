@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.CropViewModel
@{
    ViewData["Title"] = Resource.lblVarietyName;
    int potatoGroupId = (int)NMP.Portal.Enums.CropGroup.Potatoes;
}

@section BeforeContent {
    <govuk-back-link asp-action="CropTypes" asp-controller="Crop">@Resource.lblBack</govuk-back-link>
}


<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (TempData["ErrorOnVariety"] != null)
        {
            <govuk-error-summary>
                <govuk-error-summary-item href="#">@TempData["ErrorOnVariety"]</govuk-error-summary-item>
            </govuk-error-summary>
        }
        <form asp-action="VarietyName" asp-controller="Crop" method="post">
            @Html.AntiForgeryToken()
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Year"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.CropTypeID"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.CropGroupId"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.CropGroup"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.CropType"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.isEnglishRules"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.EncryptedFarmId"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.OtherCropName"></govuk-input>
            <div class="govuk-form-group"><govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.OtherCropName"></govuk-input>
                @if (Model.CropGroupId == potatoGroupId)
                {
                    <govuk-radios asp-for="@Model.Variety">
                        <govuk-radios-fieldset>
                            <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                                @Resource.lblWhichVarietyNameWouldYouLikeToPlanFor
                            </govuk-radios-fieldset-legend>
                            <govuk-radios-hint>@Resource.lblSelectOneOption</govuk-radios-hint>
                            @if (ViewBag.PotatoVarietyList != null)
                            {
                                @foreach (var item in ViewBag.PotatoVarietyList)
                                {
                                    <govuk-radios-item value="@item.PotatoVarietyId">@item.PotatoVariety</govuk-radios-item>
                                }
                            }

                        </govuk-radios-fieldset>
                    </govuk-radios>
                }
                else
                {
                    <govuk-input asp-for="@Model.Variety">
                        <govuk-input-label is-page-heading="true" class="govuk-label--l">@Resource.lblVarietyNameWithOptional</govuk-input-label>
                    </govuk-input>
                }
            </div>
            <govuk-button type="submit" data-prevent-double-click="true" class="govuk-button margin-bottom-forty margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
        </form>
        <p class="govuk-body cancel-link"><a asp-action="CreateCropPlanCancel" asp-controller="Crop" asp-route-q="@Model.EncryptedFarmId">@Resource.lblCancel</a></p>
    </div>

</div>
