                                                @Resource.lblNotSet
                                            }
                                            else{
                                            @(crop.Yield.HasValue ? crop.Yield.Value == 0.0m ? 0 :string.Format("{0:N1}", crop.Yield.Value) + " " + @Resource.lblTonnesPerHectare : Resource.lblNotSet)
                                            }
                                        </govuk-summary-list-row-value>
                                        <govuk-summary-list-row-actions>
                                            @* <govuk-summary-list-row-action asp-action="Yield" asp-controller="Crop" asp-route-q=@Model.YieldEncryptedCounter>@Resource.lblChange</govuk-summary-list-row-action> *@
                                        </govuk-summary-list-row-actions>
                                    </govuk-summary-list-row>
                                    renderSowingDate = true;
                                }
                            }
                        }
                        @if (Model.CropGroupId != (int)NMP.Portal.Enums.CropGroup.Other)
                        {
                            @if ((Model.CropInfo1 == null && (!string.IsNullOrWhiteSpace(Model.EncryptedIsCropUpdate))) || Model.CropInfo1 != null && Model.CropInfo1 != 0)
                            {
                                <govuk-summary-list-row class=@((!Model.CropInfo1.HasValue)?"govuk-error-message":"")>
                                    <govuk-summary-list-row-key>
                                        @* @string.Format(Resource.lblCropInfo1ForCheckAnswer, Model.CropGroupId == OtherGroupId ? Model.OtherCropName : Model.CropGroupId == (int)NMP.Portal.Enums.CropGroup.Potatoes ? Model.Variety : Model.CropType) *@
                                        @if (ViewBag.CropInfoOneQuestion != null)
                                        {
                                            @ViewBag.CropInfoOneQuestion
                                        }
                                    </govuk-summary-list-row-key>
                                    <govuk-summary-list-row-value>
                                        @(Model.CropInfo1.HasValue ? Model.CropInfo1Name : Resource.lblNotSet)
                                    </govuk-summary-list-row-value>
                                    <govuk-summary-list-row-actions>

                                        <govuk-summary-list-row-action asp-action="CropInfoOne" asp-controller="Crop">@Resource.lblChange 
                                            <span class="govuk-visually-hidden"> 
                                                @if (ViewBag.CropInfoOneQuestion != null)
                                        {
                                            @ViewBag.CropInfoOneQuestion
                                        }
                                            </span> 
                                            </govuk-summary-list-row-action>
                                    </govuk-summary-list-row-actions>
                                </govuk-summary-list-row>
                            }

                        }
                        @if (Model.CropGroupId == (int)NMP.Portal.Enums.CropGroup.Cereals)
                        {
                            <govuk-summary-list-row class=@((!Model.CropInfo2.HasValue)?"govuk-error-message":"")>
                                <govuk-summary-list-row-key>
                                    @string.Format(Resource.lblCropInfo2ForCheckAnswer, Model.CropGroupId == OtherGroupId ? Model.OtherCropName : Model.CropType)
                                </govuk-summary-list-row-key>
                                <govuk-summary-list-row-value>
                                    @(Model.CropInfo2.HasValue ? Model.CropInfo2Name : Resource.lblNotSet)
                                </govuk-summary-list-row-value>
                                <govuk-summary-list-row-actions>
                                    <govuk-summary-list-row-action asp-action="CropInfoTwo" asp-controller="Crop">@Resource.lblChange 
                                        <span class="govuk-visually-hidden"> 
                                            @string.Format(Resource.lblCropInfo2ForCheckAnswer, Model.CropGroupId == OtherGroupId ? Model.OtherCropName : Model.CropType)
                                        </span>
                                        </govuk-summary-list-row-action>
                                </govuk-summary-list-row-actions>
                            </govuk-summary-list-row>
                        }
                    }

                    @if (Model.CropGroupId == (int)NMP.Portal.Enums.CropGroup.Grass)
                    {
                        <govuk-summary-list-row class=@((!Model.SwardTypeId.HasValue)?"govuk-error-message":"")>
                            <govuk-summary-list-row-key>
                                @string.Format(Resource.lblWhatIsTheSwardTypeForTheseFields, (Model.FieldList.Count == 1 ? Model.Crops[0].FieldName : Resource.lblTheseFields), Model.Crops[0].Year)
                            </govuk-summary-list-row-key>
                            <govuk-summary-list-row-value>
                                @(Model.SwardTypeId == null ? Resource.lblNotSet : ViewBag.SwardType)
                            </govuk-summary-list-row-value>
                            <govuk-summary-list-row-actions>
                                <govuk-summary-list-row-action asp-action="SwardType" asp-controller="Crop">@Resource.lblChange 
                                    <span class="govuk-visually-hidden"> 
                                        @string.Format(Resource.lblWhatIsTheSwardTypeForTheseFields, (Model.FieldList.Count == 1 ? Model.Crops[0].FieldName : Resource.lblTheseFields), Model.Crops[0].Year)
                                    </span> </govuk-summary-list-row-action>
                            </govuk-summary-list-row-actions>
                        </govuk-summary-list-row>

                        <govuk-summary-list-row class=@((!Model.SwardManagementId.HasValue)?"govuk-error-message":"")>
                            <govuk-summary-list-row-key>
                                @string.Format(Resource.lblHowWillTheseFieldsBeManaged, (Model.FieldList.Count == 1 ? Model.Crops[0].FieldName : Resource.lblTheseFields))
                            </govuk-summary-list-row-key>
                            <govuk-summary-list-row-value>
                                @(Model.SwardManagementId == null ? Resource.lblNotSet : ViewBag.SwardManagementName)
                            </govuk-summary-list-row-value>
                            <govuk-summary-list-row-actions>
                                <govuk-summary-list-row-action asp-action="GrassManagement" asp-controller="Crop">@Resource.lblChange 
                                    <span class="govuk-visually-hidden"> @string.Format(Resource.lblHowWillTheseFieldsBeManaged, (Model.FieldList.Count == 1 ? Model.Crops[0].FieldName : Resource.lblTheseFields))</span> </govuk-summary-list-row-action>
                            </govuk-summary-list-row-actions>
                        </govuk-summary-list-row>
                        
                        <govuk-summary-list-row class=@((!Model.PotentialCut.HasValue)?"govuk-error-message":"")>
                            <govuk-summary-list-row-key>
                                @potentialCutText
                            </govuk-summary-list-row-key>
                            <govuk-summary-list-row-value>
                                @(Model.PotentialCut == null ? Resource.lblNotSet : potentialCutName)
                            </govuk-summary-list-row-value>
                            <govuk-summary-list-row-actions>
                                <govuk-summary-list-row-action asp-action="Defoliation" asp-controller="Crop">@Resource.lblChange 
                                    <span class="govuk-visually-hidden"> 
                                        @potentialCutText
                                    </span> 
                                </govuk-summary-list-row-action>
                            </govuk-summary-list-row-actions>
                        </govuk-summary-list-row>
                        @if (Model.SwardManagementId == (int)NMP.Portal.Enums.SwardManagement.GrazingAndSilage || Model.SwardManagementId == (int)NMP.Portal.Enums.SwardManagement.GrazingAndHay)
                        {
                            <govuk-summary-list-row class=@((!Model.DefoliationSequenceId.HasValue)?"govuk-error-message":"")>
                                <govuk-summary-list-row-key>
                                    @defoliationSequenceText
                                </govuk-summary-list-row-key>
                                @if (Model.DefoliationSequenceId == null)
                                {
                                    <govuk-summary-list-row-value>
                                        @Resource.lblNotSet
                                    </govuk-summary-list-row-value>
                                }
                                else
                                {
                                    <govuk-summary-list-row-value>
                                        @for (int i = 0; i < ViewBag.DefoliationSequenceName.Length; i++)
                                        {
                                            @(i + 1 + ". " + ViewBag.DefoliationSequenceName[i]) <br />
                                        }
                                    </govuk-summary-list-row-value>
                                }
                                <govuk-summary-list-row-actions>
                                    <govuk-summary-list-row-action asp-action="DefoliationSequence" asp-controller="Crop">@Resource.lblChange <span class="govuk-visually-hidden"> @defoliationSequenceText </span></govuk-summary-list-row-action>
                                </govuk-summary-list-row-actions>
                            </govuk-summary-list-row>
                        }


                        @if (Model.SwardTypeId == (int)NMP.Portal.Enums.SwardType.Grass)
                        {
                            @if (Model.GrassGrowthClassQuestion == null)
                            {
                                @foreach (var crop in Model.Crops)
                                {
                                    <govuk-summary-list-row class=@((!crop.Yield.HasValue)?"govuk-error-message":"")>
                                        <govuk-summary-list-row-key>
                                            @string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldForField, crop.FieldName, Model.Crops[0].Year)
                                        </govuk-summary-list-row-key>
                                        <govuk-summary-list-row-value>
                                            @(crop.Yield == null ? Resource.lblNotSet : (string.Format("{0:N0} {1}",Convert.ToInt32(crop.Yield), Resource.lblTonnesPerHectare)))
                                        </govuk-summary-list-row-value>
                                        <govuk-summary-list-row-actions>
                                            <govuk-summary-list-row-action asp-action="GrassGrowthClass" asp-controller="Crop" asp-route-q="@crop.EncryptedCounter">@Resource.lblChange <span class="govuk-visually-hidden"> @string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldForField, crop.FieldName, Model.Crops[0].Year)</span></govuk-summary-list-row-action>
                                        </govuk-summary-list-row-actions>
                                    </govuk-summary-list-row>
                                }
                            }
                            else
                            {
                                <govuk-summary-list-row class=@((!Model.GrassGrowthClassQuestion.HasValue)?"govuk-error-message":"")>
                                    <govuk-summary-list-row-key>
                                        @string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldForField, Model.FieldName, Model.Crops[0].Year)
                                    </govuk-summary-list-row-key>
                                    <govuk-summary-list-row-value>
                                        @(Model.GrassGrowthClassQuestion == null ? Resource.lblNotSet : (Model.GrassGrowthClassQuestion == 1 ? Resource.lblYesEnterTheSameTargetYieldForTheseFields : Resource.lblNoEnterADifferentTargetYieldForEachFields))
                                    </govuk-summary-list-row-value>
                                    <govuk-summary-list-row-actions>
                                        <govuk-summary-list-row-action asp-action="GrassGrowthClass" asp-controller="Crop">@Resource.lblChange <span class="govuk-visually-hidden"> @string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldForField, Model.FieldName, Model.Crops[0].Year)</span></govuk-summary-list-row-action>
                                    </govuk-summary-list-row-actions>
                                </govuk-summary-list-row>

                                @foreach (var crop in Model.Crops)
                                {
                                    <govuk-summary-list-row class=@((!crop.Yield.HasValue)?"govuk-error-message":"")>
                                        <govuk-summary-list-row-key>
                                            @(Model.GrassGrowthClassQuestion == (int)NMP.Portal.Enums.YieldQuestion.EnterASingleFigureForAllTheseFields ? string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldForFields, Model.Crops[0].Year) : string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldFor, crop.FieldName, crop.Year))
                                        </govuk-summary-list-row-key>
                                        <govuk-summary-list-row-value>
                                            @(crop.Yield == null ? Resource.lblNotSet : (string.Concat(Convert.ToInt32(crop.Yield).ToString(), " ", Resource.lblTonnesPerHectare)))
                                        </govuk-summary-list-row-value>
                                        <govuk-summary-list-row-actions>

                                            <govuk-summary-list-row-action asp-action="DryMatterYield" asp-controller="Crop" asp-route-q="@crop.EncryptedCounter">@Resource.lblChange 
                                                <span class="govuk-visually-hidden"> 
                                                    @(Model.GrassGrowthClassQuestion == (int)NMP.Portal.Enums.YieldQuestion.EnterASingleFigureForAllTheseFields ? string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldForFields, Model.Crops[0].Year) : string.Format(Resource.lblWhatIsTheTotalTargetDryMatterYieldFor, crop.FieldName, crop.Year))
                                                </span>
                                            </govuk-summary-list-row-action>

                                        </govuk-summary-list-row-actions>
                                    </govuk-summary-list-row>
                                    @if (Model.GrassGrowthClassQuestion == (int)NMP.Portal.Enums.YieldQuestion.EnterASingleFigureForAllTheseFields)
                                    {
                                        break;
                                    }
                                }
                            }
                        }

                    }

                </govuk-summary-list>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.EncryptedIsCropUpdate))
            {
                <p class="govuk-body margin-bottom-forty">
                    @Resource.lblYouCanAlso
                    @if (!Model.IsComingFromRecommendation.HasValue)
                    {
                        <a asp-action="RemoveCrop" asp-controller="Crop" asp-route-q="@ViewBag.EncryptedCropTypeId" asp-route-r="@(ViewBag.EncryptedCropGroupName==null?null:ViewBag.EncryptedCropGroupName)">@Resource.lblRemoveThisCropGroup</a>
                    }
                    else
                    {
                        <a asp-action="RemoveCrop" asp-controller="Crop" asp-route-q="@Model.EncryptedCropType" asp-route-s="@Model.EncryptedFieldName" asp-route-t="@Model.EncryptedFieldId" asp-route-u="@Model.EncryptedCropOrder" asp-route-v="@Model.EncryptedFarmId" asp-route-w="@Model.EncryptedHarvestYear">@string.Format(Resource.lblRemoveCropFromFieldInYear, Model.CropType, Model.FieldName, Model.Year)</a>
                    }.
                </p>
            }
             <govuk-button type="submit" class="margin-bottom-forty" prevent-double-click="true">
                @if (string.IsNullOrWhiteSpace(Model.EncryptedIsCropUpdate))
                {
                    @Resource.lblCreatePlan
                }
                else
                {
                    @((Model.IsComingFromRecommendation.HasValue && Model.IsComingFromRecommendation.Value)?Resource.lblUpdateThisField :Resource.lblUpdateThisCropGroupOnButton)
                }
            </govuk-button>
            <p class="govuk-body cancel-link">
                @if (!Model.IsCheckAnswer)
                {
                    <a asp-action="CreateCropPlanCancel" asp-controller="Crop" asp-route-q="@Model.EncryptedFarmId">@Resource.lblCancel</a>
                }
                else
                {
                    @if (string.IsNullOrWhiteSpace(Model.EncryptedIsCropUpdate))
                    {
                        <a asp-action="Cancel" asp-controller="Crop">@Resource.lblCancel</a>
                    }
                    else
                    {
                        if(ViewBag.IsDataChange != null && ViewBag.IsDataChange==true)
                        {
                            <a asp-action="Cancel" asp-controller="Crop">@Resource.lblCancel</a>
                        }
                        else
                        {
                            <a asp-action="BackCheckAnswer" asp-controller="Crop">@Resource.lblCancel</a>
                        }
                    }
                }
            </p>
        </form>
    </div>
</div>