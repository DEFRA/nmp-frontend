                                            <td class="govuk-table__cell">@(Model.Recommendation.FertilizerLime == null ? Resource.lblHyphen : Model.Recommendation.FertilizerLime < 0 ? 0 : Model.Recommendation.FertilizerLime == 0 ? Model.Recommendation.FertilizerLime : string.Format("{0:N0}{1}", Model.Recommendation.FertilizerLime, " ", Resource.lbltonnes))</td>
                                            <td class="govuk-table__cell">@(Model.Recommendation.FertiliserAppliedLime == null ? 0 : Model.Recommendation.FertiliserAppliedLime == 0 ? Model.Recommendation.FertiliserAppliedLime : string.Format("{0:N0}{1}", Model.Recommendation.FertiliserAppliedLime, " ", Resource.lbltonnes))</td>
                                        </tr>
                                    </tbody>
                                </table>

                            </govuk-details-text>
                        </govuk-details>
                    }
                }

            </div>
            <div class="govuk-grid-column-two-thirds">
                @if (isFieldsEmpty)
                {
                    <govuk-error-message asp-for="@Model.N">
                        @Resource.MsgEnterAnAmountForAMinimumOfOneNutrientBeforeContinuing
                    </govuk-error-message>
                }
                <govuk-input asp-for=@Model.N inputmode="numeric" input-class="govuk-input--width-5" spellcheck="false">
                    <govuk-input-label is-page-heading="true">
                        @Resource.lblNitrogen
                        <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblOutpurKgPerHectare)</span>
                    </govuk-input-label>
                    <govuk-input-suffix>@Resource.lblOutpurKgPerHectare</govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.P2O5 inputmode="numeric" input-class="govuk-input--width-5" spellcheck="false">
                    <govuk-input-label is-page-heading="true">
                        @Resource.lblPhosphateP2O5
                        <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblOutpurKgPerHectare)</span>
                    </govuk-input-label>
                    <govuk-input-suffix>@Resource.lblOutpurKgPerHectare</govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.K2O inputmode="numeric" input-class="govuk-input--width-5" spellcheck="false">
                    <govuk-input-label is-page-heading="true">
                        @Resource.lblPotashK2O
                        <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblOutpurKgPerHectare)</span>
                    </govuk-input-label>
                    <govuk-input-suffix>@Resource.lblOutpurKgPerHectare</govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.SO3 inputmode="numeric" input-class="govuk-input--width-5" spellcheck="false">
                    <govuk-input-label is-page-heading="true">
                        @Resource.lblSulphurSO3
                        <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblOutpurKgPerHectare)</span>
                    </govuk-input-label>
                    <govuk-input-suffix>@Resource.lblOutpurKgPerHectare</govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.MgO inputmode="numeric" input-class="govuk-input--width-5" spellcheck="false">
                    <govuk-input-label is-page-heading="true">
                        @Resource.lblMagnesiumMgO
                        <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lblOutpurKgPerHectare)</span>
                    </govuk-input-label>
                    <govuk-input-suffix>@Resource.lblOutpurKgPerHectare</govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.Lime inputmode="numeric" input-class="govuk-input--width-5" spellcheck="false">
                    <govuk-input-label is-page-heading="true">
                        @Resource.lblLime
                        <span class="govuk-visually-hidden"> @string.Format(Resource.lblInUnit, Resource.lbltonnes)</span>
                    </govuk-input-label>
                    <govuk-input-suffix>@Resource.lbltonnes</govuk-input-suffix>
                </govuk-input>


            </div>
        </div>

        <div class="govuk-grid-column-two-thirds">
            <govuk-button type="submit" class="margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>

            <p class="govuk-body cancel-link">
                @if (string.IsNullOrWhiteSpace(Model.EncryptedFertId) && (!Model.IsCheckAnswer))
                {
                    <a asp-action="CreateFertiliserManureCancel" asp-controller="FertiliserManure" asp-route-q="@Model.EncryptedFarmId" asp-route-r="@Model.EncryptedHarvestYear">@Resource.lblCancel</a>
                }
                else
                {
                    <a asp-action="CheckAnswer" asp-controller="FertiliserManure">@Resource.lblCancel</a>
                }
            </p>
        </div>

    </form>

</div>