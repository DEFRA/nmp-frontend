@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.ReportViewModel
@{
    var heading = "";
    if (Model.FieldAndPlanReportOption == (int)NMP.Portal.Enums.FieldAndPlanReportOption.CropFieldManagementReport ||
                                        Model.NVZReportOption == (int)NMP.Portal.Enums.NVZReportOption.NmaxReport)
    {
        heading = string.Format(Resource.lblForYearForReport, Model.ReportTypeName);
    }
    if (Model.NVZReportOption == (int)NMP.Portal.Enums.NVZReportOption.LivestockManureNFarmLimitReport)
    {
        heading = Resource.lblWhichYearWouldYouLikeToCreateALivestockReport;
    }
    if (Model.NVZReportOption == (int)NMP.Portal.Enums.NVZReportOption.ExistingManureStorageCapacityReport)
    {
        heading = Resource.lblWhichYearWouldYouLikeToCreateExistingManureReport;
    }
    ViewData["Title"] = $"{heading} {Resource.lblHyphen} {Resource.lblReport}";

    var currentYear = DateTime.Now.Year;
    var nextYear = DateTime.Now.Year + 1;
    var backAction = (Model.ReportOption == (int)NMP.Portal.Enums.ReportOption.FieldRecordsAndPlan)
        ? "FieldAndPlanReports" : "NVZComplianceReports";
}

@section BeforeContent {
    <govuk-back-link asp-action="@backAction" asp-controller="Report">@Resource.lblBack</govuk-back-link>
}
@if (TempData["ErrorOnYear"] != null)
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <govuk-error-summary>
                <govuk-error-summary-item href="#Year">@TempData["ErrorOnYear"]</govuk-error-summary-item>
            </govuk-error-summary>
        </div>
    </div>
}

@if (TempData["succesMsgContent1"] != null)
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="margin-bottom-thirty">
                <govuk-notification-banner type="NotificationBannerType.Success">
                    <p class="govuk-notification-banner__heading">
                        @TempData["succesMsgContent1"]
                    </p>
                </govuk-notification-banner>
            </div>
        </div>
    </div>
}

