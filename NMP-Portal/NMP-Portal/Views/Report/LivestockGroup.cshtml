@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.ReportViewModel
@{

    ViewData["Title"] = $"{string.Format(Resource.lblWhatTypeOfLivestockWouldYouLikeToAddFor, Model.Year)} {Resource.lblHyphen} {Resource.lblAddLivestockNumber}";
    var yes = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.True);
    var no = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.False);
    var action = "IsAnyLivestockNumber";
    if (Model.IsLivestockCheckAnswer)
    {
        action = "LivestockCheckAnswer";
    }
    else
    {
        if (ViewBag.LiveStockList != null && ViewBag.LiveStockList.Count > 0)
        {
            action = "ManageLivestock";
        }
    }
}

@section BeforeContent {
    <govuk-back-link asp-action=@action asp-controller="Report" asp-route-q="@Model.EncryptedFarmId" asp-route-y="@Model.EncryptedHarvestYear">@Resource.lblBack</govuk-back-link>
}
@if (TempData["ErrorOnLivestockGroup"] != null)
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <govuk-error-summary>
                <govuk-error-summary-item href="#">@TempData["ErrorOnLivestockGroup"]</govuk-error-summary-item>
            </govuk-error-summary>
        </div>
    </div>
}

