                        <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                            @string.Format(Resource.lblWhatTypeOfLivestockWouldYouLikeToAddFor, Model.Year)
                        </govuk-radios-fieldset-legend>
                        @if (ViewBag.LivestockGroups != null && ViewBag.LivestockGroups.Count > 0)
                        {
                            foreach (var livestockGroup in ViewBag.LivestockGroups)
                            {
                                <govuk-radios-item value="@livestockGroup.Id">@livestockGroup.Name</govuk-radios-item>
                            }
                        }
                    </govuk-radios-fieldset>
                </govuk-radios>
