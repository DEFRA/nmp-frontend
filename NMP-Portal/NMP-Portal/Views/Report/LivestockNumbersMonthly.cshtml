            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.LivestockTypeId"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.LivestockTypeName"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.LivestockNumberQuestion"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.AverageNumber"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.AverageNumberOfPlaces"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.AverageOccupancy"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.NitrogenStandardPer1000Places"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsLivestockCheckAnswer" value="@Model.IsLivestockCheckAnswer.ToString().ToLower()"></govuk-input>
            @if (Model.FieldList != null && Model.FieldList.Count > 0)
            {
                @for (int i = 0; i < Model.FieldList.Count; i++)
                {
                    <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FieldList[i]" value="@Model.FieldList[i]"></govuk-input>
                }
            }
            @if (Model.CropTypeList != null && Model.CropTypeList.Count > 0)
            {
                @for (int i = 0; i < Model.CropTypeList.Count; i++)
                {
                    <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.CropTypeList[i]" value="@Model.CropTypeList[i]"></govuk-input>
                }
            }
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <legand class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">@string.Format(Resource.lblMonthlyTotalsForThis, ViewBag.LivestockCategory, Model.Year)</h1>
                </legand>

                <p class="govuk-body">@string.Format(Resource.lblSelectedLivestockType, Model.LivestockTypeName)</p>
                <div class="margin-bottom-thirty">
                    <p class="govuk-body">@string.Format(Resource.lblNitrogenStandard, ViewBag.Nitrogen)</p>
                    @if (Model.IsGrasslandDerogation != null && Model.IsGrasslandDerogation.Value)
                    {
                        <p class="govuk-body">@string.Format(Resource.lblPhosphateStandard, ViewBag.Phosphate)</p>
                    }
                </div>
                <govuk-input asp-for=@Model.NumbersInJanuary type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblJanuary, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInFebruary type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblFebruary, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInMarch type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblMarch, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInApril type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblApril, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInMay type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblMay, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInJune type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblJune, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInJuly type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblJuly, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInAugust type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblAugust, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInSeptember type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblSeptember, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInOctober type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblOctober, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInNovember type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblNovember, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>
                <govuk-input asp-for=@Model.NumbersInDecember type="number" step="any" spellcheck="false">
                    <govuk-input-label is-page-heading="false">@string.Format(Resource.lbNumberInMonthYear, Resource.lblDecember, Model.Year)</govuk-input-label>
                    <govuk-input-suffix>@ViewBag.LivestockCategory </govuk-input-suffix>
                </govuk-input>

                <govuk-button type="submit" class="margin-bottom-forty">
                    @Resource.lblContinue
                </govuk-button>



                <p class="govuk-body cancel-link">
                    <a asp-action="LivestockManureNitrogenReportChecklist" asp-controller="Report">
                        @Resource.lblCancel
                    </a>
                </p>

            </div>

        </div>
