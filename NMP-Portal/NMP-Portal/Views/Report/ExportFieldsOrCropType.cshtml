                        @(string.Format(Resource.lblAnNMaxIsNotAvailableForYear, Model.Country == (int)NMP.Commons.Enums.FarmCountry.England ? Resource.lblNMax : Resource.lblMaximumNitrogenLimit, Model.Year))                        
