@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.ReportViewModel
@using System.Globalization
@{
    string action = string.IsNullOrWhiteSpace(Model.EncryptedId) ? Char.ToUpper(Resource.lblAdd[0]) + Resource.lblAdd.Substring(1) : Resource.lblUpdate;
    string heading = string.Empty;

    if ((Model.ManureTypeId == (int)NMP.Portal.Enums.ManureTypes.OtherLiquidMaterials || Model.ManureTypeId == (int)NMP.Portal.Enums.ManureTypes.OtherSolidMaterials)
                                ||
                                (ViewBag.FarmManureApiOption != null && ViewBag.FarmManureApiOption == Resource.lblTrue) && Model.DefaultFarmManureValueDate.HasValue)
    {
        heading = string.Format(Resource.lblDefaultNutrientValueContentSecond, (ViewBag.FarmManureApiOption != null && ViewBag.FarmManureApiOption == Resource.lblTrue && Model.DefaultFarmManureValueDate.HasValue) ? Model.ManureTypeName : Model.OtherMaterialName);
    }
    else
    {
        heading = string.Format(Resource.lblNutrientValuesFor, Model.ManureTypeName);
    }
    ViewData["Title"] = $"{heading} {Resource.lblHyphen}  {action} {Resource.lblImportsExportsOfLivestockManure}";
    var unit = "";
    if (Model.IsManureTypeLiquid == null)
    {
        Model.IsManureTypeLiquid = false;
    }
    if (Model.IsManureTypeLiquid != null)
    {
        unit = Model.IsManureTypeLiquid.Value ? Resource.lblValueKgPerMeterCube : Resource.lblValueKgPerTon;
    }
}

@section BeforeContent {
    <govuk-back-link asp-action=@(Model.IsCheckAnswer &&(!Model.IsManureTypeChange)?
                                      "LivestockImportExportCheckAnswer" : ((Model.IsCheckAnswer&&Model.IsManureTypeChange) ? "ManureType" : "LivestockQuantity") ) asp-controller="Report">@Resource.lblBack</govuk-back-link>
}
