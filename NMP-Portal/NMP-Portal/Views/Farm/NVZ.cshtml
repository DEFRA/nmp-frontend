@using NMP.Commons.Enums
@using NMP.Commons.Resources
@model NMP.Commons.ViewModels.FarmViewModel
@{
    string title = (!string.IsNullOrEmpty(Model.EncryptedIsUpdate)) ? string.Format(Resource.lblUpdateFarm, Resource.lblFarm.ToLower()) : Resource.lblAddAFarm;
    ViewData["Title"] = $"{string.Format(Resource.lblHowManyFieldsInNVZ, Model.Name)} {Resource.lblHyphen} {title}";
    var AllFieldsInNVZ = (int)NMP.Commons.Enums.NvzFields.AllFieldsInNVZ;
    var SomeFieldsInNVZ = (int)NMP.Commons.Enums.NvzFields.SomeFieldsInNVZ;
    var NoFieldsInNVZ = (int)NMP.Commons.Enums.NvzFields.NoFieldsInNVZ;
    ViewBag.CurrentStep = (int)FarmWizardSteps.Nvz;
}
@section BeforeContent {
    <govuk-back-link asp-action="@(Model.IsCheckAnswer ? "CheckAnswer" : "Rainfall")" asp-controller="Farm">@Resource.lblBack</govuk-back-link>
}

<form asp-action="Elevation" asp-controller="Farm" method="post" autocomplete="off">
   @Html.AntiForgeryToken()
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @await Html.PartialAsync("~/Views/Farm/_FarmWizardHiddenFields.cshtml", Model)            
            <govuk-radios asp-for="@Model.NVZFields">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                         @string.Format(Resource.lblHowManyFieldsInNVZ,Model.Name)
                    </govuk-radios-fieldset-legend>
                    <govuk-radios-item value="@AllFieldsInNVZ">@Resource.lblAllTheFieldsAreInAnNVZ</govuk-radios-item>
                    <govuk-radios-item value="@SomeFieldsInNVZ">@Resource.lblSomeOfTheFieldsAreInAnNVZ</govuk-radios-item>
                    <govuk-radios-item value="@NoFieldsInNVZ">@Resource.lblNoneOfTheFieldsAreInAnNVZ</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>
            <govuk-button type="submit" class="margin-bottom-forty" asp-action="NVZ">
                @Resource.lblContinue
            </govuk-button>
            <p class="govuk-body cancel-link">
                 @if (!Model.IsCheckAnswer)
                {
                    <a class="govuk-link" asp-action="CreateFarmCancel" asp-controller="Farm">@Resource.lblCancel</a>
                }
                else
                {
                    <a class="govuk-link" asp-action="CheckAnswer" asp-controller="Farm">@Resource.lblCancel</a>
                }
            </p>

        </div>

    </div>
</form>