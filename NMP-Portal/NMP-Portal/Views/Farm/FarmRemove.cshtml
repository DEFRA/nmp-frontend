@using NMP.Commons.Resources
@using NMP.Commons.ViewModels
@model FarmViewModel
@{
    ViewData["Title"] = $"{string.Format(Resource.lblRemoveFarm, Model.Name)} {Resource.lblHyphen} {Resource.lblFarmRemove}";
    var yesRemoveFarm = Convert.ToBoolean((int)NMP.Commons.Enums.TrueFalse.True);
    var noRemoveFarm = Convert.ToBoolean((int)NMP.Commons.Enums.TrueFalse.False);
}

@if (TempData["Error"] != null)
{
    <govuk-error-summary>
        <govuk-error-summary-item href="#">@TempData["Error"]</govuk-error-summary-item>
    </govuk-error-summary>
}
@if (Model != null)
{
    @section BeforeContent {
        <govuk-back-link asp-action="FarmDetails" asp-controller="Farm" asp-route-Id="@Model.EncryptedFarmId">@Resource.lblBack</govuk-back-link>
    }

    <form asp-action="FarmRemove" asp-controller="Farm" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l">@string.Format(Resource.lblRemoveFarm, Model.Name)</h1>
                <p class="govuk-body">@Resource.MsgRemoveFarm</p>
                @await Html.PartialAsync("~/Views/Farm/_FarmWizardHiddenFields.cshtml", Model)                
                <govuk-radios class="govuk-radios--inline" asp-for="@Model.FarmRemove">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend>
                            @Resource.lblAreYouSureYouWantToContinue
                        </govuk-radios-fieldset-legend>
                        <govuk-radios-item value="@yesRemoveFarm">@Resource.lblYes</govuk-radios-item>
                        <govuk-radios-item value="@noRemoveFarm">@Resource.lblNo</govuk-radios-item>
                    </govuk-radios-fieldset>
                </govuk-radios>
                <govuk-button type="submit" class="margin-bottom-forty">
                    @Resource.lblContinue
                </govuk-button>
                <p class="govuk-body cancel-link"><a asp-action="CreateFarmCancel" asp-controller="Farm">@Resource.lblCancel</a></p>

            </div>
        </div>
    </form>

}

