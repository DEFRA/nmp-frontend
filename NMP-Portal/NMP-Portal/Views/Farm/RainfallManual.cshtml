@using NMP.Portal.Resources;
@model NMP.Portal.ViewModels.FarmViewModel

@{
    ViewData["Title"] = Resource.lblRainfallManual;
}

<form asp-action="NVZ" asp-controller="Farm" method="post">
    <button class="govuk-back-link back-link" type="submit" asp-action="Rainfall" asp-controller="Farm">@Resource.lblBack</button>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-l">
                @string.Format(Resource.lblEnterAverageAnualRainfall, Model.PostCode)
            </h1>

            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Name"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address1"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address2"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address3"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address4"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.PostCode"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FullAddress"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.RegistredOrganicProducer"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.NVZField"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FieldsAbove300SeaLevel"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FullAddress"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsManualAddress" value="@Model.IsManualAddress.ToString().ToLower()"></govuk-input>
            <govuk-input class="govuk-visually-hidden" type="hidden" asp-for="@Model.OldPostcode"></govuk-input>
            <div class="govuk-form-group">
                 <div class="govuk-input__wrapper">
                <govuk-input class="govuk-input--width-5" asp-for="@Model.Rainfall" type="text"></govuk-input>
                <div class="govuk-input__suffix rainfall-suffix" aria-hidden="true">@Resource.lblmm</div>
                </div>
            </div>
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <br>
                    <govuk-button type="submit">@Resource.lblContinue</govuk-button>
                </fieldset>
            </div>
            <p class="govuk-body cancel-link"><a asp-action="CreateFarmCancel" asp-controller="Farm">@Resource.lblCancel</a></p>

        </div>
    </div>
</form>