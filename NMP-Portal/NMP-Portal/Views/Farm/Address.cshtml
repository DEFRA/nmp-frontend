@using NMP.Portal.Resources
@using NMP.Portal.Models
@model Farm
@{
    var postCode = Model.PostCode;
    var FarmName = Model.Name;
}
<a class="govuk-back-link" asp-action="Name" asp-controller="farm">@Resource.lblBack</a>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <govuk-input class="govuk-visually-hidden" type="hidden" name="@Model.Name" asp-for="@Model.Name" value="@Model.Name"></govuk-input>
        <govuk-input class="govuk-visually-hidden" type="hidden" name="@Model.PostCode" asp-for="@Model.PostCode"></govuk-input>
        <h1 class="govuk-heading-l">
            @string.Format(Resource.lblSelectTheAddressFor, FarmName)
        </h1>

        <div class="text-group">
            <h3 class="govuk-heading-s">@Resource.lblPostCode</h3>
            <p class="govuk-body">
                postCode
            </p>
            <p class="govuk-body"><a asp-action="Name" asp-controller="farm">@Resource.lblChange</a></p>
        </div>

        <div class="govuk-form-group">
            @* <govuk-select asp-for="@Model.Address1">@Resource.lblSelectTheFarmAddress</govuk-select>
            <span asp-validation-for="Name" class="text-danger"></span> *@
            @* <label class="govuk-label" for="sort">
                @Resource.lblSelectTheFarmAddress
            </label>
            <govuk-select class="govuk-select" id="sort" name="sort">
            </govuk-select> *@
        </div>

        <p class="govuk-body margin-bottom-forty"><a asp-action="ManualAddress" asp-controller="farm">@Resource.lblEnterAddressManually</a></p>

        <form asp-action="Rainfall" method="post" novalidate="" asp-controller="farm">

            <govuk-button type="submit" class="govuk-button margin-bottom-forty margin-bottom-forty" data-module="govuk-button">
                @Resource.lblContinue
            </govuk-button>

            <p class="govuk-body cancel-link"><a asp-action ="Index" asp-controller="Farm">@Resource.lblCancel</a></p>

        </form>
    </div>
</div>