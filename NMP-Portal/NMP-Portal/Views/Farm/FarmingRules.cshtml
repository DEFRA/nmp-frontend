@using NMP.Commons.Resources
@using NMP.Commons.ViewModels
@model FarmViewModel

@{
    string title = (!string.IsNullOrEmpty(Model.EncryptedIsUpdate)) ? string.Format(Resource.lblUpdateFarm, Resource.lblFarm.ToLower()) : Resource.lblAddAFarm;
    ViewData["Title"] = $"{Resource.lblFarmingRulesForWater} {Resource.lblHyphen} {title}";
}

@section BeforeContent {
    <govuk-back-link asp-action="@(Model.IsCheckAnswer ? "CheckAnswer" : "Country")" asp-controller="Farm">@Resource.lblBack</govuk-back-link>
}



<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-action="FarmingRules" method="post" asp-controller="Farm" autocomplete="off">
            @Html.AntiForgeryToken()
            @await Html.PartialAsync("~/Views/Farm/_FarmWizardHiddenFields.cshtml", Model)
            
            @if (Model != null && (Model.CountryID == (int)NMP.Commons.Enums.FarmCountry.England||
            Model.CountryID == (int)NMP.Commons.Enums.FarmCountry.Scotland))
            {
                <h1 class="govuk-heading-l">@Resource.lblRegulations_for_England</h1>
                <h2 class="govuk-heading-m">@Resource.lblFarmingRulesForWater</h2>
                <p class="govuk-body">
                    @Resource.lblFarmingRuleOfWaterFirstForEngland
                </p>
                <p class="govuk-body">
                    @Resource.lblFarmingRuleOfWaterSecondForEngland
                </p>
                <p class="govuk-body">
                    @Resource.lblFarmingRuleOfWaterThirdForEngland
                </p>
                <p class="govuk-body margin-bottom-forty">
                    @Resource.lblFarmingRuleOfWaterFourthForEngland
                    <a target="_blank" href="https://www.gov.uk/guidance/rules-for-farmers-and-land-managers-to-prevent-water-pollution#assess-pollution-risks">@Resource.lblFarmingRuleOfWaterFifthForEngland</a>
                    @Resource.lblOpenInANewWindow
                </p>                
                <h2 class="govuk-heading-m">@Resource.lblNitrateVulnerableZones</h2>
                <p class="govuk-body">
                    @Resource.lblFirstRuleOfNVZForEngland
                </p>
                <p class="govuk-body">
                    @Resource.lblSecondRuleOfNVZForEngland
                </p>
                <p class="govuk-body">
                    @Resource.lblThirdRuleOfNVZForEngland
                    <a target="_blank" href="https://www.gov.uk/government/collections/nitrate-vulnerable-zones">@Resource.lblFourthRuleOfNVZForEngland</a>
                    @Resource.lblOpenInANewWindow
                </p>               
            }
            else if (Model != null && Model.CountryID == (int)NMP.Commons.Enums.FarmCountry.Wales)
            {
                <h1 class="govuk-heading-l">@Resource.lblTheWaterResourcesRegulations2021</h1>
                <p class="govuk-body">
                    @Resource.lblFarmingRuleOfWaterFirstForWale
                </p>
                <p class="govuk-body">
                    @Resource.lblFarmingRuleOfWaterSecondForWale
                </p>
                <p class="govuk-body">
                    @Resource.lblRead
                    <a target="_blank" href="https://www.gov.wales/water-resources-control-agricultural-pollution-wales-regulations-2021-guidance-farmers-and-land">@Resource.lblFarmingRuleOfWaterThirdForWale</a>
                    @Resource.lblOpenInANewWindow
                </p>
            }

            <govuk-button type="submit" data-prevent-double-click="true" class="govuk-button margin-bottom-forty margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
        </form>
        <p class="govuk-body cancel-link">
             @if (!Model.IsCheckAnswer)
            {
                <a class="govuk-link" asp-action="CreateFarmCancel" asp-controller="Farm">@Resource.lblCancel</a>
            }
            else
            {
                <a class="govuk-link" asp-action="CheckAnswer" asp-controller="Farm">@Resource.lblCancel</a>
            }
        </p>
    </div>
</div>