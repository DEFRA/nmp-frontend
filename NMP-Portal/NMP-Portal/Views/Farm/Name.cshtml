@using NMP.Portal.Resources
@using NMP.Portal.Models
@model Farm

@{
    ViewData["Title"] = Resource.lblAddAFarm;
}


<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">@Resource.lblAddAFarm</h1>
        <p class="govuk-body">@Resource.lblIfYouhaveMoreThanOneHolding</p>

        <form asp-action="Address" method="post" asp-controller="Farm">

            <div class="govuk-form-group">
                <govuk-input asp-for="@Model.Name"></govuk-input>
            </div>

            <div class="govuk-form-group margin-bottom-forty">
                <govuk-input class="input-width-15" asp-for="@Model.PostCode"></govuk-input>
            </div>
            

            @* <button type="submit" class="govuk-button margin-bottom-forty" data-module="govuk-button">
                @Resource.lblContinue
            </button> *@
            <govuk-button type="submit" class="margin-bottom-forty" asp-action="Address" asp-controller="Farm">@Resource.lblContinue</govuk-button>
        </form>
        <p class="govuk-body cancel-link"><a asp-action="FarmList" asp-controller="Farm">@Resource.lblCancel</a></p>
    </div>
</div>