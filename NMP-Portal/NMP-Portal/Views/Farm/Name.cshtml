@using NMP.Portal.Resources
@using NMP.Portal.Models
@model Farm

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">@Resource.lblAddAFarm</h1>
        <p class="govuk-body">@Resource.lblIfYouhaveMoreThanOneHolding</p>

        <form asp-action="Address" method="post" novalidate="" autocomplete="off" asp-controller="farm">

            <div class="govuk-form-group">
                <govuk-input asp-for="@Model.Name">@Resource.lblWhatIsTheFarmName</govuk-input>
                @* <span asp-validation-for="Name" class="text-danger"></span> *@
            </div>

            <div class="govuk-form-group margin-bottom-forty">
                <govuk-input asp-for="@Model.PostCode">@Resource.lblWhatIsTheFarmPostcode</govuk-input>
                @* <span asp-validation-for="PostCode" class="text-danger"></span> *@
            </div>

            @* <button type="submit" class="govuk-button margin-bottom-forty" data-module="govuk-button">
                @Resource.lblContinue
            </button> *@
            <a class="govuk-button margin-bottom-forty" asp-action="Address" asp-controller="Farm">@Resource.lblContinue</a>
        </form>
        <p class="govuk-body cancel-link"><a asp-action="Index" asp-controller="Farm">@Resource.lblCancel</a></p>
    </div>
</div>