@using NMP.Commons.Resources
@using NMP.Commons.ViewModels
@model FarmViewModel
@{
    string title = (!string.IsNullOrEmpty(Model.EncryptedIsUpdate)) ? string.Format(Resource.lblUpdateFarm, Resource.lblFarm.ToLower()) : Resource.lblAddAFarm;
    ViewData["Title"] = $"{Resource.lblFindWeatherDataBasedOnPostcode} {Resource.lblHyphen} {title}";
    var backAction = Model.IsManualAddress ? "ManualAddress" : "Address";
    ViewBag.CurrentStep = 12;
}

@section BeforeContent {
    <govuk-back-link asp-action="@(Model.IsCheckAnswer ? "CheckAnswer" : @backAction)" asp-controller="Farm">@Resource.lblBack</govuk-back-link>
}



<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@Resource.lblFindWeatherDataBasedOnPostcode</h1>
        <form asp-action="ClimatePostCode" method="post" asp-controller="Farm" autocomplete="on">
            @Html.AntiForgeryToken()
            @await Html.PartialAsync("~/Views/Farm/_FarmWizardHiddenFields.cshtml", Model)
            <p class="govuk-body">@string.Format(Resource.lblClimateParagraphFirst, Model.Postcode, Model.Name)</p>
            <p class="govuk-body">@Resource.lblClimateParagraphSecond</p>
            <p class="govuk-body">
                <a target="_blank" href="https://www.royalmail.com/find-a-postcode">@Resource.lblClimateParagraphThird</a>
                @Resource.lblClimateParagraphFourth
            </p>
            <govuk-input input-class="govuk-input--width-5" asp-for="@Model.ClimateDataPostCode">
            </govuk-input>
            <govuk-button type="submit" data-prevent-double-click="true" class="govuk-button margin-bottom-forty margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
        </form>
        <p class="govuk-body cancel-link">
            @if (!Model.IsCheckAnswer)
            {
                <a class="govuk-link" asp-action="CreateFarmCancel" asp-controller="Farm">@Resource.lblCancel</a>
            }
            else
            {
                <a class="govuk-link" asp-action="CheckAnswer" asp-controller="Farm">@Resource.lblCancel</a>
            }
        </p>
    </div>
</div>