@using NMP.Portal.Resources
@model NMP.Portal.ViewModels.FarmViewModel
@{
    string title = (!string.IsNullOrEmpty(Model.EncryptedIsUpdate)) ? string.Format(Resource.lblUpdateFarm, Resource.lblFarm.ToLower()) : Resource.lblAddAFarm;
    ViewData["Title"] = $"{Resource.lblRegisteredOrganicProducer} {Resource.lblHyphen} {title}";
    var organicProducer = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.True);
    var noOrganicProducer = Convert.ToBoolean((int)NMP.Portal.Enums.TrueFalse.False);

}

@section BeforeContent {
    <govuk-back-link asp-action="@(Model.IsCheckAnswer ? "CheckAnswer" : "Elevation")" asp-controller="Farm">@Resource.lblBack</govuk-back-link>
}
<form asp-action="Organic" asp-controller="Farm" method="post" autocomplete="off">
    @Html.AntiForgeryToken()
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div hidden="true">
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Name"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address1"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address2"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address3"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Address4"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Postcode"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Rainfall"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FieldsAbove300SeaLevel"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.FullAddress"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.NVZFields"/> 
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsManualAddress" value="@Model.IsManualAddress.ToString().ToLower()"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsPostCodeChanged" value="@Model.IsPostCodeChanged.ToString().ToLower()"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.IsCheckAnswer" value="@Model.IsCheckAnswer.ToString().ToLower()"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.EncryptedIsUpdate"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.EncryptedFarmId"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.CountryID"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.ClimateDataPostCode"/>
            <input class="govuk-visually-hidden" type="hidden" asp-for="@Model.Country"/>
            </div>
            <govuk-radios class="govuk-radios--inline" asp-for="@Model.RegisteredOrganicProducer">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                        @Resource.lblRegisteredOrganicProducer
                    </govuk-radios-fieldset-legend>
                    <govuk-radios-item value="@organicProducer">@Resource.lblYes</govuk-radios-item>
                    <govuk-radios-item value="@noOrganicProducer">@Resource.lblNo</govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>
            <govuk-button type="submit" class="margin-bottom-forty">
                @Resource.lblContinue
            </govuk-button>
            <p class="govuk-body cancel-link">
                 @if (!Model.IsCheckAnswer)
                {
                    <a class="govuk-link" asp-action="CreateFarmCancel" asp-controller="Farm">@Resource.lblCancel</a>
                }
                else
                {
                    <a class="govuk-link" asp-action="CheckAnswer" asp-controller="Farm">@Resource.lblCancel</a>
                }
            </p>

        </div>

    </div>
</form>