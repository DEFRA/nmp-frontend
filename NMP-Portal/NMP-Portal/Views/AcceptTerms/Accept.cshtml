@using NMP.Portal.Resources;
@model NMP.Portal.ViewModels.TermsOfUseViewModel;
@{
    ViewData["Title"] = Resource.lblTermsOfUse;   
}

@if (ViewBag.Error != null)
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <govuk-error-summary>
                <govuk-error-summary-item href="#">@ViewBag.Error</govuk-error-summary-item>
            </govuk-error-summary>
        </div>

    </div>
}

<form class="form margin-top-forty" asp-action="Accept" asp-controller="AcceptTerms" method="post">
    <partial name="_TermsOfUsePartial.cshtml" />
    <div class="govuk-form-group margin-bottom-forty">      
        <govuk-checkboxes name="IsTermsOfUseAccepted" asp-for="@Model.IsTermsOfUseAccepted">
            <govuk-checkboxes-item checked="@Model.IsTermsOfUseAccepted" value="true">@Resource.lblIagree_to_the_terms_of_use</govuk-checkboxes-item>
        </govuk-checkboxes>
    </div>
    <govuk-button type="submit" data-prevent-double-click="true" class="govuk-button margin-bottom-forty">
        @Resource.lblContinue
    </govuk-button>
</form>