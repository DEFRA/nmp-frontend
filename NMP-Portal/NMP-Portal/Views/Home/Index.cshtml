@using NMP.Portal.Resources;

@{
    ViewData["Title"] = Resource.lblHomePage;
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-body">
            <h1 class="govuk-heading-xl">
                @if (ViewBag.Error != null)
                {
                    <govuk-error-summary>
                        <govuk-error-summary-item href="#">@ViewBag.Error</govuk-error-summary-item>
                    </govuk-error-summary>
                }
                <strong>
                    @Resource.lblPlanAndRecordNutrientApplications
                </strong>
            </h1>
            <p>@Resource.lblUseThisServiceToPlan</p>
            <p>@Resource.lblTheServiceWill</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>
                    @Resource.lblSaveYouMoney
                </li>
                <li>
                    @Resource.lblHelpYouComplyWithEnvironmentalRegulations
                </li>
                <li>
                    @Resource.lblHelpProtectTheEnvironment
                </li>
            </ul>            
            <p class="govuk-body">@Resource.lblFollowFarmingRules <a target="_blank" href="@Resource.lnkFarmingRuleOfWater">@Resource.lblFarmingRuleOfWater</a>.</p>

            <h2 class="govuk-heading-m">@Resource.lblHowitworks</h2>
            <p class="govuk-body">@Resource.lblRecommendationFromthisService <a target="_blank" href="@Resource.lnkToRb209NutrientManagementGuide">@Resource.lblRb209NutrientManagementGuide</a>.</p>
            <p class="govuk-body">@Resource.lblYourPlanWillBasedOn</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>
                    @Resource.lblTheCropsYouGrow
                </li>
                <li>
                    @Resource.lblTheNutrientsInYourSoil
                </li>
                <li>
                    @Resource.lblTheManuresAndFertilisersYouUseAndHowYouApplyThem
                </li>
            </ul>
            <p class="govuk-body">@Resource.lbldownloadablePdftext</p>
            <p class="govuk-body">@Resource.ContentReplacePlanetandManner</p>

            <h2 class="govuk-heading-m">@Resource.lblSustainableFarmingIncentive</h2>
            <p class="govuk-body">@Resource.ContentSustainableFarmingIncentiveStart <a target="_blank" href="@Resource.lnkNUM1PaymentOfTheSFI">@Resource.lblNUM1PaymentOfTheSFI</a>@Resource.ContentSustainableFarmingIncentiveEnd</p>

            <h2 class="govuk-heading-m">@Resource.lblYourData</h2>
            <p class="govuk-body">@Resource.contentYourDataLine1</p>
            <p class="govuk-body">@Resource.contentYourDataLine2</p>
            <p class="govuk-body">@Resource.contentYourDataLine3 <a target="_blank" href="@Resource.lnkRpa">@Resource.lblRpa</a> @Resource.lblRpaInitial.</p>
            <p class="govuk-body">@Resource.contentYourDataLine4</p>
        </div>
        <div class="govuk-body">
            <br />
            @if (ViewBag.IsDefraCustomerIdentifyConfigurationWorking)
            {
                <govuk-button-link asp-action="FarmList" asp-controller="Farm">@Resource.btnStartNow</govuk-button-link>
            }
        </div>
    </div>
</div>

