@using NMP.Portal.Resources;

@{
    ViewData["Title"] = Resource.lblPlanAndRecordNutrientApplications;
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (ViewBag.Error != null || ViewBag.ServiceError != null)
        {
            <govuk-error-summary>
                <govuk-error-summary-item href="#">@ViewBag.Error</govuk-error-summary-item>
                <govuk-error-summary-item href="#">@ViewBag.ServiceError</govuk-error-summary-item>
            </govuk-error-summary>
        }
        <h1 class="govuk-heading-xl">
            @Resource.lblPlanAndRecordNutrientApplications
        </h1>
        <p class="govuk-body">@Resource.lblUseThisServiceToPlan</p>
        <p class="govuk-body">@Resource.lblTheServiceWill</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>
                @Resource.lblSaveYouMoney
            </li>
            <li>
                @Resource.lblHelpYouComplyWithEnvironmentalRegulations
            </li>
            <li>
                @Resource.lblHelpProtectTheEnvironment
            </li>
        </ul>

        <h2 class="govuk-heading-m">@Resource.lblHowitworks</h2>
        <p class="govuk-body">@Html.Raw(Resource.lblRecommendationFromthisService)</p>
        <p class="govuk-body">@Resource.lblYourPlanWillBasedOn</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>
                @Resource.lblTheCropsYouGrow
            </li>
            <li>
                @Resource.lblTheNutrientsInYourSoil
            </li>
            <li>
                @Resource.lblTheManuresAndFertilisersYouUseAndHowYouApplyThem
            </li>
        </ul>
        <p class="govuk-body">@Resource.lblDevelopNutrientApplicationPlan</p>
        <p class="govuk-body">@Resource.lbldownloadablePdftext</p>
        <p class="govuk-body">@Resource.ContentReplacePlanetandManner</p>

        <h2 class="govuk-heading-m">@Resource.lblReleaseSchedule</h2>
        <p class="govuk-body margin-bottom-forty">@Html.Raw(Resource.lblReadScheduleLink)</p>

        <h2 class="govuk-heading-m">@Resource.lblYourData</h2>
        <p class="govuk-body">@Resource.contentYourData1</p>
        <p class="govuk-body">@Resource.contentYourData2</p>
        <p class="govuk-body">@Html.Raw(Resource.contentYourData3)</p>
        <p class="govuk-body">@Resource.contentYourData4</p>

        @if (ViewBag.IsDefraCustomerIdentifyConfigurationWorking && ViewBag.IsNmptServiceWorking)
        {
            <govuk-button-link class="govuk-button govuk-button--start" asp-action="Index" asp-controller="AboutService">
                @Resource.btnStartNow
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                </svg>
            </govuk-button-link>
        }
    </div>
</div>

